.table__header {
  position: fixed;
  display: flex;
  width: 100%;
  height: 40px;
  flex-flow: row nowrap;
  justify-content: center;
}

.table__title {
  box-sizing: border-box;
  flex: 1;
  text-align: center;
  padding: 10px 5px;
  font-size: .8rem;
  font-weight: normal;
  background-color: #9CB8CA;
  color: #fff;
}

.table__title2 {
  box-sizing: border-box;
  flex: 1;
  text-align: center;
  padding: 10px 5px;
  font-size: .8rem;
  font-weight: normal;
  background-color: rgb(238, 238, 238);
  color: rgb(26, 26, 26);
}

.table__body {
  margin-top: 40px;
  width: 100%;
  table-layout: fixed;
  border-collapse: collapse;
}

.table__item {
  border-bottom: 1px solid #c8c8cd;
}

.table__item:active {
  background-color: #D3DCE6;
}

.table__cell {
  padding: 10px 5px;
  text-align: center;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  font-size: .8rem;
  color: #324057;
}